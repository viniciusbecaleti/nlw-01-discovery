{% extends "layout.njk" %}

{% block page_title %}
  <title>Ecoleta | Cadastro do ponto de coleta</title>
{% endblock page_title %}

{% block styles %}
  <link rel="stylesheet" href="styles/create-point.css" />
  <link rel="stylesheet" href="styles/modal.css" />
{% endblock styles %}

{% set page_id = "page-create-point" %}

{% block content %}
  {% include "partials/page-header.njk" %}

  <form action="/save-point" method="POST">
    <h1>Cadastro do ponto de coleta</h1>

    <fieldset>
      <legend>
        <h2>Dados da entidade</h2>
      </legend>

      <div class="field">
        <label for="name">Nome da entidade</label>
        <input type="text" name="name" id="name" required />
      </div>

      <div class="field">
        <label for="image">Imagem da entidade</label>
        <input type="url" name="image" id="image" placeholder="http://" required />
      </div>

      <div class="field-group">
        <div class="field">
          <label for="address">Endereço</label>
          <input type="text" name="address" id="address" required />
        </div>

        <div class="field">
          <label for="number">Número</label>
          <input type="text" name="number" id="number" required />
        </div>
      </div>

      <div class="field-group">
        <div class="field">
          <label for="uf">Estado</label>
          <select name="uf" id="uf" required>
            <option value="" selected>Selecione o estado</option>
          </select>
          <input type="hidden" name="state" />
        </div>

        <div class="field">
          <label for="city">Cidade</label>
          <select name="city" id="city" disabled required>
            <option value="" disabled selected>Selecione a cidade</option>
          </select>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>
        <h2>Itens de coleta</h2>
        <span>Selecione um ou mais ítens abaixo</span>
      </legend>

      <ul class="items-grid">
        <li data-id="Lâmpadas">
          <img src="assets/lampadas.svg" alt="" />
          <span>Lâmpadas</span>
        </li>

        <li data-id="Pilhas e Baterias">
          <img src="assets/baterias.svg" alt="" />
          <span>Pilhas e Baterias</span>
        </li>

        <li data-id="Papéis e Papelão">
          <img src="assets/papeis-papelao.svg" alt="" />
          <span>Papéis e Papelão</span>
        </li>

        <li data-id="Resíduos Eletrônicos">
          <img src="assets/eletronicos.svg" alt="" />
          <span>Resíduos Eletrônicos</span>
        </li>

        <li data-id="Resíduos Orgânicos">
          <img src="assets/organicos.svg" alt="" />
          <span>Resíduos Orgânicos</span>
        </li>

        <li data-id="Óleo de Cozinha">
          <img src="assets/oleo.svg" alt="" />
          <span>Óleo de Cozinha</span>
        </li>
      </ul>

      <input type="hidden" name="items" />
    </fieldset>

    <button type="submit">Cadastrar ponto de coleta</button>
  </form>

  {% if saved %}
    <div id="modal">
      <div class="content">
        <div class="header">
          <img src="/assets/check.svg" alt="">
          <h1>Cadastro concluído!</h1>
        </div>
      </div>
    </div>

    <script>
      setTimeout(() => {
        window.location = '/search-results'
      }, 2000)
    </script>
  {% endif %}

  <script src="scripts/create-point.js"></script>
{% endblock content %}